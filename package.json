{
  "name": "screenshot",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/crvouga/screenshot.git",
  "author": "Christopher Vouga <crvouga@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn server:start",
    "dev": "concurrently \"yarn server:dev\" \"cd client && yarn start\"",
    "server:start": "NODE_ENV=production node build/index.js",
    "server:dev": "NODE_ENV=development nodemon index.ts",
    "postinstall": "tsc",
    "heroku-postbuild": "cd client && yarn && yarn run build",
    "heroku:local": "yarn && yarn heroku-postbuild && yarn heroku-dot-env && heroku local",
    "heroku:env": "npx heroku config -s -a crvouga-screenshot-service > .env",
    "heroku:logs": "heroku logs --tail --app crvouga-screenshot-service",
    "kill": "npx kill-port 8000 && npx kill-port 3000"
  },
  "devDependencies": {
    "@types/apicache": "^1.6.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.5.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "apicache": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "puppeteer": "^10.2.0"
  }
}
